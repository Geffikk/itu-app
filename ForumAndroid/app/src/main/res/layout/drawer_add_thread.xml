<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:clickable="false"
    android:focusable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"
        android:textColor="@color/purple_700"
        android:text="Create new thread"
        android:gravity="center"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/threadName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="42dp"
        android:autofillHints="Name of thread"
        android:background="@drawable/group_name_shape"
        android:hint="Name of thread"
        android:inputType="textMultiLine"
        android:maxLength="50" />

    <EditText
        android:id="@+id/threadDescription"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:autofillHints="Name of thread"
        android:background="@drawable/group_name_shape"
        android:ems="10"
        android:gravity="top"
        android:hint="Name of thread"
        android:inputType="textMultiLine"
        android:maxLength="1000" />

    <Button
        android:id="@+id/addThreadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="clickedCreateThread"
        android:background="@drawable/activity_register_button_shape"
        android:text="Create" />

</LinearLayout>