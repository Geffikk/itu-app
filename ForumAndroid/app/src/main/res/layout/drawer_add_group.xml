<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:clickable="false"
    android:focusable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"
            android:textColor="@color/purple_700"
        android:text="Create new group"
        android:gravity="center"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/groupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="42dp"
        android:autofillHints="Name of group"
        android:background="@drawable/group_name_shape"
        android:hint="Name of group"
        android:inputType="text"
        android:maxLength="20" />

    <EditText
        android:id="@+id/groupDescription"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:autofillHints="Description of group"
        android:background="@drawable/group_name_shape"
        android:ems="10"
        android:gravity="top"
        android:hint="Description of group"
        android:inputType="text"
        android:maxLength="100" />

    <Button
        android:id="@+id/addGroupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="clickedCreateGroup"
        android:background="@drawable/activity_register_button_style"
        android:text="Create" />

</LinearLayout>